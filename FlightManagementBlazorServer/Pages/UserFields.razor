<div class="carrierFields">
    <label for="userUsername" class="formLabel">Username:</label>
    <InputText id="userUsername" @bind-Value="@User.Username" class="form-control"></InputText>

    <label for="userName" class="formLabel">Name:</label>
    <InputText id="userName" @bind-Value="@User.Name" class="form-control"></InputText>

    <label for="userEmail" class="formLabel">Email:</label>
    <InputText id="userEmail" @bind-Value="@User.Email" class="form-control"></InputText>

    <label for="userPassword" class="formLabel">Password:</label>
    <InputText id="userPassword" type="password" @bind-Value="@User.Password" class="form-control" ></InputText>

    <label for="userRole" class="formLabel">Role:</label>
    <InputSelect id="userRole" @bind-Value="@User.Role" class="form-control">
        <option value="">Select...</option>
        <option value="Admin">Admin</option>
        <option value="CheckIn">CheckIn</option>
    </InputSelect>
</div>

@code {
    [Parameter]
    public User User { get; set; }
}
